{
    "name": "sport-turbo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "prepare": "husky install",
        "build:site03": "turbo run build --filter=site-03",
        "start:site03": "cd apps/site-03 && pnpm start",
        "fix:site03": "cd apps/site-03 && pnpm lint:fix"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{css,scss,ts,tsx,module.css,module.scss}": "prettier --check --ignore-unknown",
        "*.{ts,tsx}": "eslint --"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/node": "^20.8.2",
        "eslint": "^8.48.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "tsconfig": "workspace:*",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.6.10"
}
